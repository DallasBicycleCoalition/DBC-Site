---
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../globals.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <title>Dallas Bike Coalition</title>
    <ViewTransitions />
    <script>
      (function (g, c) {
        var l = g.createElement(c);
        if (l instanceof HTMLScriptElement) {
          l.async = true;
          l.src = "https://dallas-bicycle-coalition.givecloud.co/v1/widgets.js";
          var d = g.getElementsByTagName(c)[0];
          if (d && d.parentNode) {
            d.parentNode.insertBefore(l, d);
          }
        }
      })(document, "script");
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
