---
import { PortableText } from "@portabletext/react";
import Layout from "../../layouts/Layout.astro";
import { getWeekWithoutDrivingPage } from "../../utils/groqQueries";

const weekWithoutDrivingPage = await getWeekWithoutDrivingPage();
---

<Layout title={weekWithoutDrivingPage?.title || "Week Without Driving"}>
  <section class="hero">
    <h1>{weekWithoutDrivingPage?.title}</h1>
  </section>

  <section id="intro-block">
    <h2>{weekWithoutDrivingPage?.introBlock.heading}</h2>
    <div class="normal-copy">
      {
        weekWithoutDrivingPage?.introBlock.content && (
          <PortableText value={weekWithoutDrivingPage.introBlock.content} />
        )
      }
    </div>
  </section>
</Layout>
