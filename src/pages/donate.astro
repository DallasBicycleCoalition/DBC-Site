---
import { PortableText } from "@portabletext/react";
import Layout from "../layouts/Layout.astro";
import { getDonatePage } from "../utils/groqQueries";

const donatePage = await getDonatePage();
---

<Layout>
  {
    donatePage ? (
      <>
        <section id="donate-intro-section" class="single-col">
          <div class="content">
            <div class="normal-copy">
              {donatePage.infoText && (
                <PortableText value={donatePage.infoText} />
              )}
            </div>
          </div>
        </section>

        <section id="donate-embed-section" class="single-col">
          <div data-fundraising-form="8NDR96EK" data-inline />
        </section>
      </>
    ) : (
      <section id="donate-intro-section" class="single-col">
        <div class="content">
          <h2>Donate</h2>
          <div class="normal-copy">Sorry, this page is unavailable.</div>
        </div>
      </section>
    )
  }

  <style>
    #donate-intro-section {
      padding: 3em;
      text-align: center;
      margin: 0 auto;
      max-width: 55em;
      padding-bottom: 0;
    }
    #donate-intro-section h2 {
      font-weight: bold;
      color: #cd011c;
      font-size: 1.5em;
      letter-spacing: 0.15em;
      margin-bottom: 1em;
    }
    .normal-copy {
      font-size: 1.15em;
      line-height: 1.5;
    }
    #donate-embed-section > div[data-fundraising-form] {
      max-width: 400px;
      margin: 0 auto;
      height: 600px;
      min-height: 400px;
      position: relative;
    }
    #donate-embed-section iframe {
      max-width: 100% !important;
      width: 100% !important;
      height: 600px !important;
      min-height: 400px !important;
      border-radius: 12px !important;
      box-shadow: 0 2px 16px rgba(0,0,0,0.08) !important;
      margin: 0 auto !important;
      display: block !important;
    }
    @media screen and (max-width: 750px) {
      #donate-intro-section {
        padding: 1.5em;
      }
      .normal-copy {
        font-size: 1em;
      }
      #donate-embed-section > div[data-fundraising-form] {
        max-width: 100%;
        height: 400px;
        min-height: 300px;
      }
      #donate-embed-section iframe {
        height: 400px !important;
        min-height: 300px !important;
      }
    }
  </style>
</Layout>
